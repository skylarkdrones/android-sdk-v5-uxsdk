<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/uxsdk_camera_config_height"
    tools:parentTag="dji.v5.ux.visualcamera.CameraVisiblePanelWidget">

    <include
        android:id="@+id/panelCameraControls"
        layout="@layout/uxsdk_panel_common_camera_controls"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="panelCameraControls" />

    <dji.v5.ux.visualcamera.iso.CameraConfigISOAndEIWidget
        android:id="@+id/widget_camera_config_iso_and_ei"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/uxsdk_spacing_mini"
        android:paddingRight="@dimen/uxsdk_spacing_mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/panelCameraControls"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/uxsdk_gray"
        app:layout_constraintStart_toEndOf="@id/widget_camera_config_iso_and_ei" />

    <dji.v5.ux.visualcamera.shutter.CameraConfigShutterWidget
        android:id="@+id/widget_camera_config_shutter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/uxsdk_spacing_mini"
        android:paddingRight="@dimen/uxsdk_spacing_mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/widget_camera_config_iso_and_ei"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/uxsdk_gray"
        app:layout_constraintStart_toEndOf="@id/widget_camera_config_shutter" />

    <dji.v5.ux.visualcamera.aperture.CameraConfigApertureWidget
        android:id="@+id/widget_camera_config_aperture"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/uxsdk_spacing_mini"
        android:paddingRight="@dimen/uxsdk_spacing_mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/widget_camera_config_shutter"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/uxsdk_gray"
        app:layout_constraintStart_toEndOf="@id/widget_camera_config_aperture" />

    <dji.v5.ux.visualcamera.ev.CameraConfigEVWidget
        android:id="@+id/widget_camera_config_ev"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/uxsdk_spacing_mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/widget_camera_config_aperture"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/uxsdk_gray"
        app:layout_constraintStart_toEndOf="@id/widget_camera_config_ev" />

    <dji.v5.ux.visualcamera.wb.CameraConfigWBWidget
        android:id="@+id/widget_camera_config_wb"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/uxsdk_spacing_mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/widget_camera_config_ev"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/uxsdk_gray"
        app:layout_constraintStart_toEndOf="@id/widget_camera_config_wb" />

    <dji.v5.ux.visualcamera.storage.CameraConfigStorageWidget
        android:id="@+id/widget_camera_config_storage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/uxsdk_spacing_mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/widget_camera_config_wb"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>