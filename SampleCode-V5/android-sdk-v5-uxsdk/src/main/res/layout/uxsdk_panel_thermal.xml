<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_panel_thermal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/uxsdk_camera_config_height"
    tools:parentTag="dji.v5.ux.visualcamera.thermal.CameraThermalPanelWidget">

    <dji.v5.ux.visualcamera.thermal.ThermalStreamPaletteBar
        android:id="@+id/widget_thermal_stream_palette_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <dji.v5.ux.visualcamera.thermal.ThermalDisplayModeWidget
        android:id="@+id/widget_thermal_display_mode"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/widget_thermal_stream_palette_bar"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>