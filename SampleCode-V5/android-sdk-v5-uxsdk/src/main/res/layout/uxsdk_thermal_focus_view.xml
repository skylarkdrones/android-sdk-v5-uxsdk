<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/uxsdk_150_dp"
    android:layout_height="@dimen/uxsdk_100_dp">

    <TextView
        android:id="@+id/temp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/uxsdk_4_dp"
        android:textColor="@color/uxsdk_white"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/thermal_focus_iv"
        app:layout_constraintEnd_toEndOf="@id/thermal_focus_iv"
        app:layout_constraintStart_toStartOf="@id/thermal_focus_iv" />

    <ImageView
        android:id="@+id/thermal_focus_iv"
        android:layout_width="@dimen/uxsdk_24_dp"
        android:layout_height="@dimen/uxsdk_24_dp"
        android:background="@drawable/uxsdk_ic_centerpoint_no_fill"
        android:drawablePadding="4dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/thermal_spot_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="temp_tv, thermal_focus_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>